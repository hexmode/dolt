#!/bin/bash
# Pre-removal script for dolt

set -e

case "$1" in
    remove|purge)
        # Stop the service if running
        if command -v systemctl >/dev/null 2>&1; then
            if systemctl is-active --quiet dolt-server 2>/dev/null; then
                systemctl stop dolt-server 2>/dev/null || true
            fi
            if systemctl is-enabled --quiet dolt-server 2>/dev/null; then
                systemctl disable dolt-server 2>/dev/null || true
            fi
        fi
        ;;

    upgrade|deconfigure)
        ;;
    
    failed-upgrade)
        ;;
    
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
